<form action="/edit_todo/<%= @todo_details.first['id'] %>" method="post">
  <label for="title">Title</label><br>
  <input type="text" name="title" value="<%= @todo_details.first['title'] %>" autofocus='true'><br>
  <label for="description">Description</label><br>
  <input type="text" name="description" value="<%= @todo_details.first['description'] %>" placeholder="add a description"><br>
  <label for="date">Date</label><br>
  <input type="date" name="due_date" value="<%= @todo_details.first['due'][0,10] %>"><br>
  <label for="time">Time</label><br>
  <input type="time" name="due_time" value="<%= @todo_details.first['due'][11,18] %>"><br>
  <% if @todo_details.first['completed'] == 't' %>
    <p><input type="checkbox" name="completed" value = "true" checked> Done</p>
    <p><input type="checkbox" name="completed" value = "false"> Not Done</p>
  <% else %>
    <p><input type="checkbox" name="completed" value="true"> Done</p>
    <p><input type="checkbox" name="completed" value="false" checked> Not Done</p>
  <% end %>
  <button>Update To-Do</button>
</form><br>

<form action="/" method="get">
  <button>View To-Do List</button>
</form>
