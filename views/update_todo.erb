<h1>Update a task</h1>

<! Adding form for updating a to-do list item >
<! Value for input item leaves current database value as default >
<% @db.exec(@item) do |result| %>
  <% result.each do |row| %>
    <form action="/update_todo/<%= @id %>" method="post">
      <label for="task">Task</label><br>
      <input type="text" name="task" value="<%= row['task'].capitalize %>" autofocus><br>
      <label for="description">Description</label><br>
      <input type="text" name="description" value="<%= row['description'] %>"><br>
      <label for="do_by">Do-by Date</label><br>
      <input type="text" name="do_by" value="<%= row['do_by'] %>"><br>
      <label for="done">Done?</label><br>
      <input type="radio" name="done" value="false" checked> No<br>
      <input type="radio" name="done" value="true"> Yes<br>
      <button>Update task</button><br>
      <br>
  <% end %>
<% end %>
