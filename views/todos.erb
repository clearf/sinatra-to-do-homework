<h3>My (Ever Growing) To Do List</h3>
<ul>
  <% @todos.each do |single_todo| %>
    <li>
      <%= single_todo['task'].capitalize %> (do by: <%= single_todo['due_date'] %>) (status:
        <% if single_todo['due_date'] == true %>
          <%= "done!" %>
        <% else %>
          <%= "not done" %>)
        <% end %>
    </li>
  <% end %>
</ul>