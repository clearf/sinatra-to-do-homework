<h1> Update To Do:</h1>
<!-- Editing specific To Do -->
<form action="/todos/todo/<%=@todo['id']%>" method="post">

  <p>Completed?</br>
    Yes<input id="completed-value-true" type="radio" name="completed" value="true">
  </br>
    No <input id="completed-value-true" type="radio" name="completed" value="false">
  </p>

  <p>
    <label for="tast">Task</label></br>
    <input type="text" value="<%=@todo['task']%>" name="task" autofocus
    maxlength="15">
  </p>

  <p>
    <label for="due">Due</label></br>
    <input type="text" value="<%=@todo['due']%>" name="due"
    maxlength="15">
  </p>

  <p>
    <label for="priority">Priority</label></br>
    <input type="INT" value="<%=@todo['priority']%>" name="priority"
  maxlength="1">
  </p>

  <button>Update</button>
</form>
