<h1>Let's make a contact</h1>

<form action="/list<%= @contact['id'] %>" method="post">
  <label for="first">First Name</label><br>
  <input type="text" name="first" value="<%= @contact['first'] %>"><br>
  <label for="last">Last Name</label><br>
  <input type="text" name="last" placeholder="give me your last name"><br>
  <label for="age">Age</label><br>
  <input type="number" name="age" autofocus="true" value="<%= @contact['age']%>"><br>
  <button>Add Contact</button>
</form>